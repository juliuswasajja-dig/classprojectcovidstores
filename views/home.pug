doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  meta(name='description' content='')
  meta(name='author' content='')
  title Covid Stores
  // Bootstrap core CSS
  link(href='/home/vendor/bootstrap/css/bootstrap.min.css' rel='stylesheet')
  // Custom styles for this template
  link(href='home/css/shop-homepage.css' rel='stylesheet')
.page-wrapper.bg-gra-03.p-t-45.p-b-50
  .wrapper.wrapper--w790
  // Navigation
  nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
    .container
      a.navbar-brand(href='#') Covid Stores
      button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarResponsive' aria-controls='navbarResponsive' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarResponsive.collapse.navbar-collapse
        ul.navbar-nav.ml-auto
          li.nav-item.active
            a.nav-link(href='#')
              | Home
              span.sr-only (current)
          li.nav-item
            a.nav-link(href='#') About
          li.nav-item
            a.nav-link(href='#') Services
          li.nav-item
            a.nav-link(href='#') Contact
  // Page Content
  .container
    .row
      .col-lg-3
        h1.my-4 Catagories
        .list-group
          a.list-group-item(href='#') Category 1
          a.list-group-item(href='#') Category 2
          a.list-group-item(href='#') Category 3
      // /.col-lg-3
      .col-lg-9
        #carouselExampleIndicators.carousel.slide.my-4(data-ride='carousel')
          ol.carousel-indicators
            li.active(data-target='#carouselExampleIndicators' data-slide-to='0')
            li(data-target='#carouselExampleIndicators' data-slide-to='1')
            li(data-target='#carouselExampleIndicators' data-slide-to='2')
          .carousel-inner(role='listbox')
            .carousel-item.active
              img.d-block.img-fluid(src='/home/homeimages/cover.jpg' alt='First slide')
            .carousel-item
              img.d-block.img-fluid(src='/home/homeimages/2.png' alt='Second slide')
            .carousel-item
              img.d-block.img-fluid(src='/home/homeimages/3.png' alt='Third slide')
          a.carousel-control-prev(href='#carouselExampleIndicators' role='button' data-slide='prev')
            span.carousel-control-prev-icon(aria-hidden='true')
            span.sr-only Previous
          a.carousel-control-next(href='#carouselExampleIndicators' role='button' data-slide='next')
            span.carousel-control-next-icon(aria-hidden='true')
            span.sr-only Next
        .row
          each product in products
            .col-lg-4.col-md-6.mb-4
              .card.h-100
                a(href='#')
                  img.card-img-top(src=product.productimage alt='')
                .card-body
                  h4.card-title
                    a(href='#') #{product.productname}
                  h5 #{product.productprice}
                  p.card-text
                    | #{product.productdescription}
                .card-footer
                  small.text-muted &starf; &starf; &starf; &starf; &star;
